<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base App Theme -->
    <style name="Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar">
        <!-- Core brand colors -->
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/card_orange</item>

        <!-- Backgrounds -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Buttons & Controls -->
        <item name="android:buttonStyle">@style/Widget.MyApp.Button</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_orange</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Use Material3 -->
        <item name="materialButtonStyle">@style/Widget.MyApp.Button</item>
    </style>

    <!-- Custom Button Style -->
    <style name="Widget.MyApp.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>
